@{
  Layout = "_Layout";
}

<div class="container">
<h1>Category List</h1>

<ul>
@foreach (var category in Model)
{
<li><a href ="/categories/@category.GetId()">@category.GetName()</a></li>
}
</ul>
<a href = "/" class = "btn btn-info">Home</a>
<a href = "/categories/new" class = "btn btn-success">Add Category</a>
</div>
